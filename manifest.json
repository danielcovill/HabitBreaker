{
	"name": "Habit Breaker",
	"version": "0.1",
	"icons": {
		"16": "images/icon16.png",
		"96": "images/icon96.png",
		"128": "images/icon128.png"
	},
	"description": "This extension serves to remind you not to visit sites you've listed. If and when there's a need to break the rules, it gives a way to meter and track exceptions.",
	"default_locale": "en",
	"author": "Dan Covill",
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"<all_urls>",
		"storage"
	],
	"options_ui": {
    "page": "options.html"
	},
	"browser_action": {
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png"
		},
		"default_title": "Habit Breaker",
		"default_popup": "app/popup.html"
	},
	"web_accessible_resources": [
		"app/index.html",
		"app/app.js",
		"app/app.css"
	],
	"background": {
		"scripts": ["app/background.js"]
	},
	"manifest_version": 2
}